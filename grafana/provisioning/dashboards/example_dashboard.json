{
  "dashboard": {
    "id": null,
    "title": "Telegram Event Monitoring",
    "tags": ["telegram", "events"],
    "timezone": "browser",
    "panels": [
      {
        "type": "graph",
        "title": "Received Events",
        "targets": [
          {
            "expr": "telegram_events_received_total",
            "legendFormat": "Received"
          }
        ],
        "yaxes": [{ "format": "short" }]
      },
      {
        "type": "graph",
        "title": "Sent Events",
        "targets": [
          {
            "expr": "telegram_events_sent_total",
            "legendFormat": "Sent"
          }
        ],
        "yaxes": [{ "format": "short" }]
      },
      {
        "type": "graph",
        "title": "Event Errors",
        "targets": [
          {
            "expr": "telegram_events_errors_total",
            "legendFormat": "Consumer Errors"
          },
          {
            "expr": "telegram_events_send_errors_total",
            "legendFormat": "Producer Errors"
          }
        ],
        "yaxes": [{ "format": "short" }]
      },
      {
        "type": "graph",
        "title": "Event Processing Duration",
        "targets": [
          {
            "expr": "telegram_event_processing_duration_seconds_sum / telegram_event_processing_duration_seconds_count",
            "legendFormat": "Handler avg duration (s)"
          }
        ],
        "yaxes": [{ "format": "s" }]
      },
      {
        "type": "graph",
        "title": "Event Send Duration",
        "targets": [
          {
            "expr": "telegram_event_send_duration_seconds_sum / telegram_event_send_duration_seconds_count",
            "legendFormat": "Producer avg duration (s)"
          }
        ],
        "yaxes": [{ "format": "s" }]
      },
      {
        "type": "graph",
        "title": "Message Status Count",
        "targets": [
          {
            "expr": "telegram_events_status{status=\"SUCCESS\"}",
            "legendFormat": "SUCCESS"
          },
          {
            "expr": "telegram_events_status{status=\"FAILED\"}",
            "legendFormat": "FAILED"
          },
          {
            "expr": "telegram_events_status{status=\"UNAUTHORIZED\"}",
            "legendFormat": "UNAUTHORIZED"
          }
        ],
        "yaxes": [{ "format": "short" }]
      }
    ],
    "schemaVersion": 30,
    "version": 1
  }
}