{
  "dashboard": {
    "id": null,
    "title": "Telegram Events Monitoring",
    "tags": ["telegram", "events", "prometheus"],
    "timezone": "browser",
    "schemaVersion": 36,
    "version": 1,
    "panels": [
      {
        "type": "timeseries",
        "title": "Telegram Events by Status (Handler)",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "sum by (status) (telegram_events_total)",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "none"
          }
        },
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 6}
      },
      {
        "type": "timeseries",
        "title": "Telegram Events by Status (Consumer)",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "sum by (status) (telegram_events_consumer_total)",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "none"
          }
        },
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 6}
      },
      {
        "type": "timeseries",
        "title": "Text Event Processing Duration",
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "histogram_quantile(0.5, sum(rate(telegram_events_processing_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(telegram_events_processing_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "p95",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        },
        "gridPos": {"x": 0, "y": 6, "w": 12, "h": 6}
      }
    ]
  },
  "overwrite": true
}